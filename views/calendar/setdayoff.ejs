<% include ../partials/header %>

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>View Day Off Request</h3>
              </div>
            </div>

            <div class="clearfix"></div>
            
            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Day Off Request List</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">


                    <!-- start project list -->
                    <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 1%"></th>
                          <th style="width: 20%">Work Title</th>
                          <th>Start Date</th>
                          <th>End Date</th>
                          <th style="width: 20%"></th>
                        </tr>
                      </thead>
                      <tbody>
                      
                      <% showCalendar.forEach(function(work){ %>

                      <%if(user.dayOffList.indexOf(work._id)==-1){%>
                      
                        
                        <tr>
                          <td></td>
                          <td>
                               
                                  <%=work.title%>
                                
                          </td>
                          
                          <td >
                                
                                <%=work.start.replace("T", " ")%>
                          </td>
                          <td>
                                <%=work.end.replace("T"," ")%>
                          </td>
                          
                          <td>
                            <form action="/calendar/message/<%=user._id%>/<%=work._id%>" method="GET">
                              <button class="btn btn-primary btn-xs"> Submit </button>
                            </form>
                          </td>
                        </tr>
                      
                      <% } %>  
                      <% }) %>  
                      </tbody>
                    </table>
                    <!-- end project list -->

                  </div>
                </div>
              </div>
            </div>
            
            
          
          </div>
        </div>
        <!-- /page content -->

  
<% include ../partials/footer %>