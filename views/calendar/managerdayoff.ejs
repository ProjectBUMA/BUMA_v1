<% include ../partials/header %>

    <% users.forEach(function(user){ %>
       <%if(!user.isManager){%>
            <div class="row">
              <%= user.username %> 
              <br>
                  <% for(var i =0; i< user.dayOff.length;i++){ %>
                      
                      <p> <%= user.dayOff[i].title%> 
                      <br><%=user.dayOff[i].start%> 
                      <br><%=user.dayOff[i].end%> </p>
                      
                      <form action="/calendar/test" method = "POST">
                          <button class="btn btn-success btn-large">Approve</button>
                      </form>
                      
                      <form action="/calendar/dayoff/<%=user._id%>/<%=user.dayOff[i]._id%>?_method=DELETE" method="POST">
                          <button class="btn btn-danger btn-large">Reject</button>
                      </form>
                  <% }%>
            </div>
        <% } %>
        <br>
     <% }) %>


<% include ../partials/footer %>